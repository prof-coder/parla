<!-- sections/home.liquid -->

<div class="global_carousel" id="home_carousel">
  {% for block in section.blocks %}
  <div class="global_carousel__element">
    <div class="global_carousel__element__content {{ block.settings.slide_aligment }}">
      <div class="global_carousel__element__content__subtitle">
        {{ block.settings.slide_subtitle }}
      </div>
      <div class="global_carousel__element__content__title">
        {{ block.settings.slide_title }}
      </div>
      <div class="global_carousel__element__content__description">
        {{ block.settings.slide_description }}
      </div>
      <div class="global_carousel__element__content__cta">
        <a class="btn" href="{{ block.settings.slide_cta_link }}">{{ block.settings.slide_cta_text }}</a>
      </div>
    </div>
    <div class="global_carousel__element__background" style="background-image: url({{ block.settings.slide_image | img_url: '1400x' }})"></div>
  </div>
  {% endfor %}
</div>


