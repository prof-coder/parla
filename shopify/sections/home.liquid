{% schema %}
  {
    "name": "Home Slideshow",
    "settings": [
      {
        "id": "header",
        "type": "text",
        "label": "Header",
        "default": "Hello world"
      }
    ],
    "blocks": [
      {
        "type": "select",
        "name": "Slide",
        "settings": [
          {
            "type":      "select",
            "id":        "slide_aligment",
            "label":     "Aligment",
            "default":   "left",
            "info":      "Slide Aligment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },
          {
            "id":    "slide_image",
            "type":  "image_picker",
            "label": "Slide Image"
          },
          {
            "id":     "slide_title",
            "type":   "text",
            "label":  "Slide Title"
          },
          {
            "id":     "slide_subtitle",
            "type":   "text",
            "label":  "Slide SubTitle"
          },
          {
            "id":     "slide_description",
            "type":   "text",
            "label":  "Slide Description"
          },
          {
            "id":     "slide_cta_text",
            "type":   "text",
            "label":  "Slide CTA Text"
          },
          {
            "id":     "slide_cta_link",
            "type":   "url",
            "label":  "Slide CTA Link"
          }
        ]
      }
    ]
  }
{% endschema %}
