{%- assign _section = section.settings -%}
<div class="product-whatout product-container">
  <div class="whatout-inner">
    {%- if _section.title != blank -%}
      <h2 class="whatout-title">{{ _section.title }}</h2>
    {%- endif -%}
    {%- if _section.detail != blank -%}
      <p class="whatout-sub-title">{{ _section.detail }}</p>
    {%- endif -%}
    {%- if section.blocks.size > 0 -%}
      <div class="whatout-items">
        <div class="whatout-items-inner">
          {%- for block in section.blocks -%}
            {%- assign _block = block.settings -%}
            <div class="whatout-item">
              <a class="whatout-item--link" href="{{ _block.item_link }}">
                {%- if _block.item_img != blank -%}
                  <div class="whatin-item--image">
                    <img src="{{ _block.item_img | img_url: 'master' }}" />
                  </div>
                {%- endif -%}
                <div class="whatout-item--info">
                  <div class="whatout-item--title">
                    <p>{{ _block.title }}</p>
                    <span class="icon">
                      {%- include 'icon', type: 'arrow-right-direction' -%}
                    </span>
                  </div>
                </div>
              </a>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>
{% schema %}
  {
    "name": "Product Out",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "What's Out"
      },
      {
        "type": "textarea",
        "id": "detail",
        "label": "Detail",
        "default": "The unethical and harmful"
      }
    ],
    "blocks": [
      {
        "type": "out-item",
        "name": "Product out Item",
        "settings": [
          {
            "type": "url",
            "id": "item_link",
            "label": "Item Link"
          },
          {
            "type": "image_picker",
            "id": "item_img",
            "label": "Item Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ]
  }
{% endschema %}