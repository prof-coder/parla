<!-- snippets/footer-nav.liquid -->

<ul class="footer-section--link-list--list">
  {% for link in data.links %}
    {% if link.links != blank %}
      <li>
        <a href="{{ link.url }}">
          {{ link.title }}
          {% include 'icon-arrow-down' %}
        </a>
        <ul>
          {% for childlink in link.links %}
            <li>
              <a href="{{ childlink.url }}">
                {{ childlink.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% else %}
      <li>
        <a href="{{ link.url }}">
          {{ link.title }}
        </a>
      </li>
    {% endif %}
  {% endfor %}
</ul>
